#include <iostream>

using namespace std;

struct node{
    int data;
    node *next;
};

class list{
    node* head;
    public:
    list(int a){
        head=new node;
        head->data=a;
        head->next=NULL;
    }
    ~list(){
        while (head!=NULL){
            node* temp=head;
            head=head->next;
            delete temp;
        }
    }
    void push_head (int a){
        node* temp=new node;
        temp->data=a;
        temp->next=head;
        head=temp;
    }
    void push_back (int a){
        node* temp=new node;
        while (temp->next!=NULL){
            temp=temp->next;
        }
        temp->data=a;
        temp->next->next=NULL;
    }
    int get(int i){
        int a;
        node* temp=head;
        for (int j=1; j<=i; j++){
            temp=temp->next;
        }
        a=temp->data;
        return a;
    }
    void set (int i, int a){
        node* temp=head;
        for (int j=1; j<=i; j++){
        temp->data=a;
        }
    }
};


int main(){
    list A(12);
    A.push_head(6);
    A.push_back(9);
    cout<<A.get(2)<<endl;
    A.set(2, 8);
    cout<<A.get(2);
	return 0; 
}
